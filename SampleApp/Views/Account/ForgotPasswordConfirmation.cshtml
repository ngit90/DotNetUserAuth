@{
    ViewData["Title"] = "Reset Link Sent";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="alert alert-info text-center p-5 shadow-sm rounded-4">
                <h4 class="alert-heading mb-3 text-primary">📧 Check Your Email</h4>
                <p class="mb-4">
                    If there's an account associated with that email, you'll receive a link to reset your password shortly.
                </p>
                <a href="@Url.Action("Login", "Account")" class="btn btn-outline-primary">Return to Login</a>
            </div>
        </div>
    </div>
</div>