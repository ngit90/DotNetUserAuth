@model Registration
@{
    ViewData["Title"] = "Login";
}
@if (TempData["RegSuccess"] != null)
{
    <div class="alert alert-success">
        @TempData["RegSuccess"]
    </div>
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4 w-50">
        <h2 class="text-center mb-4">Login</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

        <div class="text-center mt-4">
            <p>or</p>
            <a href="/GoogleLogin" class="btn btn-outline-danger w-100">
                <i class="bi bi-google me-2"></i> Sign in with Google
            </a>
            <p class="mt-2">
                <a asp-action="ForgotPassword" asp-controller="Account">Forgot your password?</a>
            </p>
        </div>
    </div>
  
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}